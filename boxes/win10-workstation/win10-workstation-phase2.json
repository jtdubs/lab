{
    "variables": {
        "boot_wait": "10s",
        "communicator": "winrm",
        "cpus": "4",
        "memory": "4096",
        "shutdown_command": "powershell Stop-Computer",
        "vm_name": "win10-workstation",
        "winrm_password": "vagrant",
        "winrm_timeout": "10m",
        "winrm_username": "vagrant"
    },

    "builders": [
        {
            "type": "vmware-vmx",

            "display_name": "{{ user `vm_name` }}",
            "source_path": "output-vmware-vmx-phase1/win10-base.vmx",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "{{ user `winrm_timeout` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "virtualbox-ovf",

            "source_path": "output-virtualbox-ovf-phase1/win10-base.ovf",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "{{ user `winrm_timeout` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "hyperv-vmcx",

            "clone_from_vmcx_path": "output-hyperv-vmcx-phase1",
            "cpus": "{{ user `cpus` }}",
            "generation": 2,
            "memory": "{{ user `memory` }}",
            "switch_name": "Default Switch",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "{{ user `winrm_timeout` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        }
    ],

    "provisioners": [
        {
            "type": "powershell",
            "scripts": [
                "scripts/Install-JTDubs.ps1"
            ]
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "{{ user `vm_name` }}-{{ .Provider }}.box"
        }
    ]
}
