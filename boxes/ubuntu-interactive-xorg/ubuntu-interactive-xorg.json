{
    "variables": {
        "base_image": "ubuntu-updated",
        "boot_wait": "5s",
        "communicator": "ssh",
        "cpus": "4",
        "headless": "false",
        "memory": "4096",
        "shutdown_command": "sudo systemctl poweroff -i",
        "ssh_private_key_file": "../../vagrant.id_rsa",
        "ssh_timeout": "10m",
        "ssh_username": "vagrant",
        "vm_name": "ubuntu-interactive-xorg"
    },

    "builders": [
        {
            "type": "vmware-vmx",

            "display_name": "{{ user `vm_name` }}",
            "output_directory": "output-vmware",
            "source_path": "../{{ user `base_image` }}/output-vmware/{{ user `base_image` }}.vmx",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "virtualbox-ovf",

            "output_directory": "output-virtualbox",
            "source_path": "../{{ user `base_image` }}/output-virtualbox/{{ user `base_image` }}.ovf",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "hyperv-vmcx",

            "clone_from_vmcx_path": "../{{ user `base_image` }}/output-hyperv",
            "cpus": "{{ user `cpus` }}",
            "generation": 2,
            "memory": "{{ user `memory` }}",
            "output_directory": "output-hyperv",
            "switch_name": "Default Switch",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/setup.sh"
        },
        {
            "type": "shell",
            "only": "vmware-vmx",
            "script": "scripts/setup-vmware.sh"
        },
        {
            "type": "shell",
            "only": "hyperv-vmcx",
            "script": "scripts/setup-hyperv.sh"
        },
        {
            "type": "shell-local",
            "only": "hyperv-vmcx",
            "inline": [
                "powershell.exe Set-VM -VMName {{ user `vm_name` }} -EnhancedSessionTransportType HvSocket"
            ]
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "{{ user `vm_name` }}-{{ .Provider }}.box"
        }
    ]
}