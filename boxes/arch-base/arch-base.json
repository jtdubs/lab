{
    "variables": {
        "iso_url": "http://mirrors.mit.edu/archlinux/iso/2020.11.01/archlinux-2020.11.01-x86_64.iso",
        "iso_path": "iso/archlinux-2020.11.01-x86_64.iso",
        "iso_checksum": "739fab8d23430a01629a131ae02713a09af86968"
    },

    "builders": [
        {
            "type": "vmware-iso",
            "disk_size": 32768,
            "disk_type_id": 0,
            "iso_urls": [
                "{{ user `iso_path` }}",
                "{{ user `iso_url` }}"
            ],
            "iso_checksum": "sha1:{{ user `iso_checksum` }}",
            "http_directory": "srv",
            "shutdown_command": "sudo systemctl poweroff -i",
            "cpus": 1,
            "memory": 1024,
            "cores": 2,
            "network": "vmnet8",
            "headless": false,
            "communicator": "ssh",
            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_timeout": "10m",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait40>",
                "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh | bash<enter>"
            ],
            "disk_adapter_type": "scsi",
            "cdrom_adapter_type": "ide",
            "guest_os_type": "other5xlinux-64",
            "vmx_data": {
                "firmware": "efi"
            },
            "vm_name": "arch-base"
        },
        {
            "type": "virtualbox-iso",
            "disk_size": 32768,
            "iso_urls": [
                "{{ user `iso_path` }}",
                "{{ user `iso_url` }}"
            ],
            "iso_checksum": "sha1:{{ user `iso_checksum` }}",
            "http_directory": "srv",
            "shutdown_command": "sudo systemctl poweroff -i",
            "cpus": 2,
            "memory": 1024,
            "headless": false,
            "communicator": "ssh",
            "ssh_username": "packer",
            "ssh_password": "packer",
            "ssh_timeout": "10m",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait40>",
                "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh | bash<enter>"
            ],
            "hard_drive_interface": "scsi",
            "guest_os_type": "ArchLinux_64",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--firmware", "EFI" ]
            ],
            "vm_name": "arch-base"
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "sources": [
                "../vagrant_id_rsa.pub",
                "../packer_id_rsa.pub",
                "scripts/install.sh",
                "scripts/install-vmware.sh",
                "scripts/install-virtualbox.sh"
            ],
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/bootstrap.sh"
        },
        {
            "type": "shell",
            "only": "vmware-iso",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/bootstrap-vmware.sh"
        },
        {
            "type": "shell",
            "only": "virtualbox-iso",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/bootstrap-virtualbox.sh"
        },
        {
            "type": "shell",
            "inline": [
                "sudo systemd-nspawn --machine=guest -D /mnt /install.sh"
            ]
        },
        {
            "type": "shell",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/cleanup.sh"
        }
      ],

    "post-processors": [
        {
            "type": "shell-local",
            "inline": [
                "ssh-keygen -R {{ build `Host` }}"
            ]
        }
    ]
}
