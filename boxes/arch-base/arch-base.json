{
    "variables": {
        "boot_command_1": "<enter><wait40>",
        "boot_command_2": "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh | bash<enter>",
        "boot_command_2_hyperv": "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh-hyperv.sh | bash<enter>",
        "boot_wait": "5s",
        "communicator": "ssh",
        "cpus": "2",
        "disk_size": "32768",
        "headless": "false",
        "http_directory": "srv",
        "iso_checksum": "sha1:739fab8d23430a01629a131ae02713a09af86968",
        "iso_path": "iso/archlinux-2020.11.01-x86_64.iso",
        "iso_url": "http://mirrors.mit.edu/archlinux/iso/2020.11.01/archlinux-2020.11.01-x86_64.iso",
        "memory": "4096",
        "shutdown_command": "sudo systemctl poweroff -i",
        "ssh_password": "vagrant",
        "ssh_timeout": "10m",
        "ssh_username": "vagrant",
        "vm_name": "arch-base"
    },

    "builders": [
        {
            "type": "vmware-iso",

            "cdrom_adapter_type": "ide",
            "disk_adapter_type": "scsi",
            "disk_type_id": 0,
            "guest_os_type": "other5xlinux-64",
            "network": "vmnet8",
            "output_directory": "output-vmware",
            "vmx_data": { "firmware": "efi", "vhv.enable": "TRUE" },
            "cores": "{{ user `cpus` }}",

            "boot_command": [ "{{ user `boot_command_1` }}", "{{ user `boot_command_2` }}" ],
            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "http_directory": "{{ user `http_directory` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_urls": [ "{{ user `iso_path` }}", "{{ user `iso_url` }}" ],
            "memory": "{{ user `memory` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "virtualbox-iso",

            "guest_os_type": "ArchLinux_64",
            "hard_drive_interface": "scsi",
            "output_directory": "output-virtualbox",
            "vboxmanage": [ [ "modifyvm", "{{.Name}}", "--firmware", "EFI", "--graphicscontroller", "vmsvga", "--vram", "128" ] ],
            "boot_command": [ "{{ user `boot_command_1` }}", "{{ user `boot_command_2` }}" ],
            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{ user `disk_size` }}",
            "guest_additions_mode": "disable",
            "headless": "{{ user `headless` }}",
            "http_directory": "{{ user `http_directory` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_urls": [ "{{ user `iso_path` }}", "{{ user `iso_url` }}" ],
            "memory": "{{ user `memory` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "hyperv-iso",

            "generation": 2,
            "output_directory": "output-hyperv",
            "switch_name": "Default Switch",

            "boot_command": [ "{{ user `boot_command_1` }}", "{{ user `boot_command_2_hyperv` }}" ],
            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "http_directory": "{{ user `http_directory` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_urls": [ "{{ user `iso_path` }}", "{{ user `iso_url` }}" ],
            "memory": "{{ user `memory` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        }
    ],

    "provisioners": [
        {
            "type": "file",
            "sources": [
                "../../vagrant.id_rsa.pub",
                "scripts/install.sh",
                "scripts/install-vmware.sh",
                "scripts/install-virtualbox.sh",
                "scripts/install-hyperv.sh"
            ],
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/bootstrap.sh"
        },
        {
            "type": "shell",
            "only": "vmware-iso",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/bootstrap-vmware.sh"
        },
        {
            "type": "shell",
            "only": "virtualbox-iso",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/bootstrap-virtualbox.sh"
        },
        {
            "type": "shell",
            "only": "hyperv-iso",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/bootstrap-hyperv.sh"
        },
        {
            "type": "shell",
            "inline": [
                "sudo systemd-nspawn --machine=guest -D /mnt /install.sh"
            ]
        },
        {
            "type": "shell",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/cleanup.sh"
        }
      ],

    "post-processors": [ ]
}
