{
    "builders": [
        {
            "type": "null",
            "communicator": "none"
        }
    ],

    "post-processors": [
        [
            {
                "type": "artifice",
                "files": [
                    "output-vmware-iso/disk.vmdk",
                    "output-vmware-iso/ubuntu-base.nvram",
                    "output-vmware-iso/ubuntu-base.vmsd",
                    "output-vmware-iso/ubuntu-base.vmx",
                    "output-vmware-iso/ubuntu-base.vmxf"
                ]
            },
            {
                "type": "vagrant",
                "keep_input_artifact": true,
                "provider_override": "vmware",
                "output": "ubuntu-base-vmware.box"
            },
            {
                "type": "shell-local",
                "inline": [
                    "vagrant box add ubuntu-base-vmware.box --name ubuntu-base"
                ]
            }
        ]
    ]
}
