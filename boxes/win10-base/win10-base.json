{
    "variables": {
        "boot_command": "<enter><wait><enter><wait><enter><wait><enter>",
        "boot_wait": "-1s",
        "communicator": "winrm",
        "cpus": "2",
        "disk_size": "32768",
        "headless": "true",
        "iso_checksum": "sha256:7f96789d08835d37b5886f81f1887a38617453a5211e788964553f4194d8b23c",
        "iso_path": "iso/Windows.iso",
        "memory": "4096",
        "shutdown_command": "shutdown /s /t 20 /f /d p:4:1",
        "vm_name": "win10-base",
        "winrm_password": "vagrant",
        "winrm_timeout": "60m",
        "winrm_username": "vagrant"
    },

    "builders": [
        {
            "type": "vmware-iso",

            "cdrom_adapter_type": "ide",
            "cores": "{{ user `cpus` }}",
            "disk_adapter_type": "sata",
            "disk_type_id": 0,
            "floppy_files": [
                "unattend/vmware/autounattend.xml",
                "scripts/Set-Network.ps1",
                "scripts/Enable-WinRM.ps1"
            ],
            "guest_os_type": "windows9-64",
            "network": "vmnet8",
            "output_directory": "output-vmware",
            "vmx_data": { "firmware": "efi", "vhv.enable": "TRUE" },

            "boot_command": [ "{{ user `boot_command` }}" ],
            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_url": "{{ user `iso_path` }}",
            "memory": "{{ user `memory` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "{{ user `winrm_timeout` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "virtualbox-iso",

            "floppy_files": [
                "unattend/virtualbox/autounattend.xml",
                "scripts/Set-Network.ps1",
                "scripts/Enable-WinRM.ps1"
            ],
            "guest_os_type": "Windows10_64",
            "hard_drive_interface": "sata",
            "output_directory": "output-virtualbox",
            "vboxmanage": [ [ "modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga", "--vram", "128" ] ],

            "boot_command": [ "{{ user `boot_command` }}" ],
            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_url": "{{ user `iso_path` }}",
            "memory": "{{ user `memory` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "{{ user `winrm_timeout` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "hyperv-iso",

            "cd_files": [
                "unattend/hyperv/autounattend.xml",
                "scripts/Set-Network.ps1",
                "scripts/Enable-WinRM.ps1"
            ],
            "cd_label": "UNATTEND",
            "generation": 2,
            "output_directory": "output-hyperv",
            "switch_name": "Default Switch",

            "boot_command": [ "{{ user `boot_command` }}" ],
            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_url": "{{ user `iso_path` }}",
            "memory": "{{ user `memory` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "winrm_password": "{{ user `winrm_password` }}",
            "winrm_timeout": "{{ user `winrm_timeout` }}",
            "winrm_username": "{{ user `winrm_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        }
    ],

    "provisioners": [ ],

    "post-processors": [ ]
}
