{
    "builders": [
        {
            "type": "null",
            "communicator": "none"
        }
    ],

    "post-processors": [
        [
            {
                "type": "artifice",
                "files": [
                    "output-vmware-vmx/disk-cl1.vmdk",
                    "output-vmware-vmx/arch-workstation.nvram",
                    "output-vmware-vmx/arch-workstation.vmsd",
                    "output-vmware-vmx/arch-workstation.vmx",
                    "output-vmware-vmx/arch-workstation.vmxf"
                ]
            },
            {
                "type": "vagrant",
                "keep_input_artifact": true,
                "provider_override": "vmware",
                "output": "arch-workstation-vmware.box"
            },
            {
                "type": "shell-local",
                "inline": [
                    "vagrant box add arch-workstation-vmware.box --name arch-workstation-vmware"
                ]
            }
        ]
    ]
}
