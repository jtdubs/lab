{
    "variables": {
        "boot_wait": "15s",
        "communicator": "ssh",
        "cpus": "4",
        "headless": "false",
        "memory": "4096",
        "shutdown_command": "sudo systemctl poweroff -i",
        "ssh_private_key_file": "../../vagrant.id_rsa",
        "ssh_timeout": "10m",
        "ssh_username": "vagrant",
        "vm_name": "arch-workstation"
    },

    "builders": [
        {
            "type": "vmware-vmx",

            "display_name": "{{ user `vm_name` }}",
            "source_path": "../arch-base/output-vmware-iso/arch-base.vmx",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "virtualbox-ovf",

            "source_path": "../arch-base/output-virtualbox-iso/arch-base.ovf",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        },
        {
            "type": "hyperv-vmcx",

            "clone_from_vmcx_path": "../arch-base/output-hyperv-iso",
            "cpus": "{{ user `cpus` }}",
            "generation": 2,
            "memory": "{{ user `memory` }}",
            "switch_name": "Default Switch",

            "boot_wait": "{{ user `boot_wait` }}",
            "communicator": "{{ user `communicator` }}",
            "headless": "{{ user `headless` }}",
            "shutdown_command": "{{ user `shutdown_command` }}",
            "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "vm_name": "{{ user `vm_name` }}"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/set-hostname.sh",
                "scripts/setup.sh"
            ]
        },
        {
            "type": "shell",
            "only": "vmware-vmx",
            "script": "scripts/setup-vmware.sh"
        },
        {
            "type": "shell",
            "only": "hyperv-vmcx",
            "script": "scripts/setup-hyperv.sh"
        },
        {
            "type": "shell",
            "script": "scripts/setup-user.sh"
        },
        {
            "type": "shell-local",
            "inline": [
                "powershell.exe Set-VM -VMName {{ user `vm_name` }} -EnhancedSessionTransportType HvSocket"
            ]
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "{{ user `vm_name` }}-{{ .Provider }}.box"
        },
        {
            "type": "shell-local",
            "inline": [
                "ssh-keygen -R {{ build `Host` }}"
            ]
        }
    ]
}
