{
    "builders": [
        {
            "type": "vmware-vmx",
            "source_path": "../kali-base/output-vmware-vmx/kali-base.vmx",
            "shutdown_command": "sudo systemctl poweroff -i",
            "communicator": "ssh",
            "ssh_username": "packer",
            "ssh_private_key_file": "../../packer.id_rsa",
            "ssh_timeout": "10m",
            "boot_wait": "5s",
            "vm_name": "kali-workstation",
            "display_name": "kali-workstation"
        },
        {
            "type": "virtualbox-ovf",
            "source_path": "../kali-base/output-virtualbox-ovf/kali-base.ovf",
            "shutdown_command": "sudo systemctl poweroff -i",
            "communicator": "ssh",
            "ssh_username": "packer",
            "ssh_private_key_file": "../../packer.id_rsa",
            "ssh_timeout": "10m",
            "boot_wait": "15s",
            "vm_name": "kali-workstation"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "execute_command": "sudo bash '{{ .Path }}'",
            "script": "scripts/setup.sh"
        },
        {
            "type": "shell",
            "execute_command": "sudo -u jtdubs bash '{{ .Path }}'",
            "script": "scripts/setup-jtdubs.sh"
        }
    ],

    "post-processors": [
        {
            "type": "shell-local",
            "inline": [
                "ssh-keygen -R {{ build `Host` }}"
            ]
        }
    ]
}
